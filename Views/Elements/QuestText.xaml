<UserControl x:Class="WpfApp1.Views.Elements.QuestText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Текст ответа"></TextBlock>
            <TextBox TextWrapping="WrapWithOverflow" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" MinHeight="80"  MaxHeight="150" Text="{Binding ValueAnswer}"/>
        </StackPanel>            
    </Grid>
</UserControl>
