<UserControl x:Class="WpfApp1.Views.Elements.ItemAnswerText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Text="{Binding SelectedQestion.Value}"/>
        <CheckBox Grid.Column="0" IsChecked="{Binding Right}"/>
    </Grid>
</UserControl>
